

.page-header
  %h2
    %i.fa.fa-instagram
    Instagram
    
.row
  .col-lg-12
    #carousel.carousel.slide{ data: { ride: 'carousel', interval: 'false' } }
      %ol.carousel-indicators
        %li.active{ data: { target: "#carousel", slide: { to: 0 }}}
        %li{ data: { target: "#carousel", slide: { to: 1 }}}
        %li{ data: { target: "#carousel", slide: { to: 2 }}}
        
      .carousel-inner
        .item.active
          .row#instagrams
            = render @instagrams
    
