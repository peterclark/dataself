.row.section#github-section
  .col-lg-12    
    .page-header
      %h2
        %i.fa.fa-github
        Github
        
    .row
      .col-lg-12
        = column_chart commits_by_day_api_githubs_path(version: 1), library: commits_by_day_settings, id: 'github-chart'

.row.section#instagram-section
  .col-lg-12
    .page-header
      %h2
        %i.fa.fa-instagram
        Instagram

    .row#instagrams
      = render @instagrams
      
.row.section#automatic-section
  .col-lg-12
    .page-header
      %h2
        %i.fa.fa-car
        Trips
    
    .row#automatics
      = render @automatics
      
.row.section#driving-section
  .col-lg-12
    .page-header
      %h2
        %i.fa.fa-road
        Most Recent Trip
        
    .row#driving
      .col-sm-4
        %div.text-center
          %button.btn.btn-lg.btn-danger.disabled{ style: "font-size: 6em; font-weight: bold"}
            = number_with_precision( @trip.average_mpg.to_f, precision: 1 ) rescue -1
            %div{ style: "font-size: .25em" } mpg
            
      .col-sm-4
        %div.text-center
          %button.btn.btn-lg.btn-danger.disabled{ style: "font-size: 6em; font-weight: bold"}
            = number_with_precision( @trip.distance_m.to_f / 1609.34, precision: 1 ) rescue -1
            %div{ style: "font-size: .25em" } miles
            
      .col-sm-4
        %div.text-center
          %button.btn.btn-lg.btn-danger.disabled{ style: "font-size: 6em; font-weight: bold"}
            = number_with_precision( @trip.fuel_volume_gal.to_f, precision: 1 ) rescue -1
            %div{ style: "font-size: .25em" } gallons
      
      
.row.section#football-section
  .col-lg-12
    .page-header
      %h2
        %i.fa.fa-trophy
        Fantasy Football
    .row#footballs
      = render @footballs
  

